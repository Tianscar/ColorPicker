<resources>

    <declare-styleable name="RectColorPicker">
        <attr name="android:orientation"/>
        <attr name="android:cursorVisible"/>
        <attr name="cursorWidth"/>
        <attr name="cursorRadius"/>
        <attr name="hue"/>
        <attr name="saturation"/>
        <attr name="value"/>
        <attr name="order" format="integer">
            <enum name="ascending" value="0" />
            <enum name="descending" value="1" />
        </attr>
        <attr name="hueRectWeight" format="float"/>
        <attr name="colorRectWeight" format="float"/>
    </declare-styleable>

</resources>
